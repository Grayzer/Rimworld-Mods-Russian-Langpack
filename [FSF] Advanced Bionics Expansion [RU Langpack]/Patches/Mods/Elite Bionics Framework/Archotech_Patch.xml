<?xml version="1.0" encoding="utf-8"?>

<Patch>

	<!-- RJW Archotech -->

	<Operation Class="PatchOperationFindMod">

    	<mods>
        	<li>Elite Bionics Framework</li>
    	</mods>

    	<match Class="PatchOperationSequence">
        <success>Always</success>
        <operations>

			<li Class="PatchOperationAdd">
				<xpath>*/HediffDef[defName = "ArchotechBreasts"]</xpath>
				<value>
					<comps>
        				<li Class="EBF.Hediffs.HediffCompProperties_MaxHPAdjust">
            				<linearAdjustment>50</linearAdjustment>
        				</li>
    				</comps>
				</value>
			</li>

			<li Class="PatchOperationAdd">
				<xpath>*/HediffDef[defName = "ArchotechAnus"]/comps</xpath>
				<value>
        			<li Class="EBF.Hediffs.HediffCompProperties_MaxHPAdjust">
            			<linearAdjustment>25</linearAdjustment>
        			</li>
				</value>
			</li>

			<li Class="PatchOperationAdd">
				<xpath>*/HediffDef[defName = "ArchotechVagina"]</xpath>
				<value>
					<comps>
        				<li Class="EBF.Hediffs.HediffCompProperties_MaxHPAdjust">
            				<linearAdjustment>25</linearAdjustment>
        				</li>
    				</comps>
				</value>
			</li>

			<li Class="PatchOperationAdd">
				<xpath>*/HediffDef[defName = "ArchotechPenis"]</xpath>
				<value>
					<comps>
								<li Class="EBF.Hediffs.HediffCompProperties_MaxHPAdjust">
										<linearAdjustment>25</linearAdjustment>
								</li>
						</comps>
				</value>
			</li>

        </operations>
    	</match>

	</Operation>

</Patch>
